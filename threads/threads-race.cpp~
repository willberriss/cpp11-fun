#include <iostream>
#include <cmath>
#include <thread>
using namespace std;

void func(int x) {
    cout << "Inside thread: x=" << x << endl;
}

int main() {
    cout << "Before thread th" << "\n";
    thread th(&func, 100);
    cout << "After thread th" << "\n";
    cout << "Still after thread th" << "\n";
    //sleep (1);
    for (int i=1; i<1000; ++i) {
        int x = std::sqrt(i);
        x += 1;
    }
    cout << "Still still after thread th" << "\n";
    th.join();
    cout << "Outside thread" << endl;
    return 0;
}

